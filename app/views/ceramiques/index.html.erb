<% content_for(:description) do %>
Site de e-commerce configurable. Créez votre compte et visualisez votre futur site de vente en ligne de vos produits.
<% end %>
<% content_for(:title_tag) do %>
  Liste des produits à vendre
<% end %>

<% if @front_offer %>
  <% content_for(:meta_image) do %>
    <%= cl_image_path @front_offer.ceramiques.first.photos[0].path %>
  <% end %>
  <% content_for(:meta_description) do %>
    <% @front_offer.discount > 0 ? discount = "Réduction de #{(@front_offer.discount * 100).to_i} %" : discount = "" %>
    <%= "#{@front_offer.title} - #{discount} - #{@front_offer.description}".squish %>
  <% end %>
<% end %>


<div class="container">
  <div class="row">

<!-- INDEX H1 :  EITHER A DISCOUNT OFFER DIV, OR A SIMPLE H1 -->
  <% if @front_offer && params[:offer] == nil %>
    <div class="hidden-xs hidden-sm col-md-12 info-top">
      <%= render 'shared/general_info_bubble' %>
    </div>
    <div class="h1-index mobile hidden-md hidden-lg">
      <h1>Les créations uniques</h1>
      <hr>
    </div>
  <% elsif params[:offer].present? %>
    <div class="h1-index hidden-xs hidden-sm">
      <h1> <%= @front_offer.title %> : les produits</h1>
      <hr>
    </div>
  <% else %>
    <div class="h1-index hidden-xs hidden-sm">
      <h1>Les créations uniques : <%= ENV['MODEL']%></h1>
      <hr>
    </div>
    <div class="h1-index mobile hidden-md hidden-lg">
      <h1>Les créations uniques</h1>
      <hr>
    </div>
  <% end %>

<!-- LAPTOP -->
    <div class="hidden-xs hidden-sm col-md-3">
      <div id="ceramique-filters-content">
        <h2>Rechercher</h2>
        <form action="/<%=ENV['MODEL']%>" method='get'>
          <div class="category-filter filter">
            <h3>Categories</h3>
            <div class="filter-category">
              <ul>
                <% @categories.each do |category| %>
                  <li><label class="label-search"><input type="checkbox" name="categories[]" value="<%= category %>"><%= category %></label></li>
                <% end %>
              </ul>
              <h3>Prix max €</h3>
              <label class="label-search"><input type="number" name="prix_max" min="0" class="prix"></label>
            </div>
            <% if  params[:categories].present? || params[:prix_max].present? || params[:offer].present? %>
              <label class="label-search all"><input type="checkbox" name="all[]" value="all">Tout afficher</label>
            <% end %>
            <input type="submit" class="btn btn-primary recherche" value="OK">
          </div>
        </form>
      </div>
    </div>

    <div class="hidden-xs hidden-sm col-md-9 ceramique-list">
      <% @ceramiques.each do |ceramique| %>
          <div class="col-xs-6">
            <%= link_to ceramique_path(ceramique), title: "#{ceramique.name}", class: "cardlink" do %>
              <div class="ceramiquecard">
                <% if ceramique.offer%>
                  <% if ceramique.offer.discount > 0 %>
                    <p class="discount-offer">-<%= (ceramique.offer.discount * 100).to_i %>%</p>
                    <div class="ribbon"></div>
                  <% end %>
                <% end %>
                <div class="img-container">
                  <% if ceramique.photos[0].height >= ceramique.photos[0].width %>
                    <%= cl_image_tag(cl_image_path(ceramique.photos[0].path, :width => 285, :height => 285, :crop => :fit), alt: "#{ceramique.name}", class: "img-resized") %>
                  <% else %>
                    <img class="img" src="<%= cl_image_path ceramique.photos[0].path %>" alt="<%=ceramique.name%>">
                  <% end %>
                  <% ceramique.offer ? discount =  ceramique.offer.discount : discount = 0 %>
                  <h2 class="prix-index"><%= humanized_money(ceramique.price * (1 - discount))%> <%= currency_symbol %></h2>
                  <% if ceramique.offer %>
                    <% if ceramique.offer.discount > 0 %>
                      <h3 class="previous-price"><%= humanized_money(ceramique.price)%> <%= currency_symbol %></h3>
                    <% end %>
                  <% end %>
                </div>
                <h2> <%= ceramique.name.capitalize%> </h2>
                <% ratio = ceramique.photos[0].width.to_f / ceramique.photos[0].height > 1.35 ? "large" : "small" %>
                <p class="<%= ratio %>"> <%= ceramique.description%> </p>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>

<!-- MOBILE -->
<div class="hidden-md hidden-lg col-xs-12 col-md-12 ceramique-list">
      <% @ceramiques.each do |ceramique| %>
          <div class="col-xs-12">
            <%= link_to ceramique_path(ceramique), title: "#{ceramique.name}", class: "cardlink" do %>
              <div class="ceramiquecard mobile">
                <% if ceramique.offer%>
                  <% if ceramique.offer.discount > 0 %>
                    <p class="discount-offer">-<%= (ceramique.offer.discount * 100).to_i %>%</p>
                    <div class="ribbon"></div>
                  <% end %>
                <% end %>
                <div class="img-container">
                  <img class="img" src="<%= cl_image_path ceramique.photos[0].path %>" alt="<%=ceramique.name%>">
                  <% ceramique.offer ? discount =  ceramique.offer.discount : discount = 0 %>
                  <h2 class="prix-index"><%= humanized_money(ceramique.price * (1 - discount))%> <%= currency_symbol %></h2>
                  <% if ceramique.offer %>
                    <% if ceramique.offer.discount > 0 %>
                      <h3 class="previous-price"><%= humanized_money(ceramique.price)%> <%= currency_symbol %></h3>
                    <% end %>
                  <% end %>
                </div>
                <h2> <%= ceramique.name.capitalize%> </h2>
                <h3> <%= ceramique.description%> </h3>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>

  </div>
</div>

<% content_for(:after_js) do %>
  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "ArtGallery",
    "name": "Les <%="#{ENV['MODEL']} de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}"%>",
    "description": "Online craft store",
    "openingHours": "Mo-Fr 09:00-18:00",
    "telephone": "<%= ENV['TELEPHONE']%>",
    "url": "https://<%= ENV['APPNAME']%>.herokuapp.com/",
    "image":"https://<%= ENV['APPNAME']%>.herokuapp.com<%= image_path ENV['HOMEPIC']%>",
    "address":"<%= ENV['ADDRESS'].gsub(/[+]/, ' ')%>",
    "priceRange":"20€ à 800€"
  }
  </script>
<% end %>
