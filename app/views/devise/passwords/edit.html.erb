<% content_for(:noindex) do %>
<meta name="robots" content="noindex">
<% end %>

<h2><%= t(:password_change)%></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} #{t(:min_char)}" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:password_change), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
