<%- if controller_name != 'sessions' %>
  <%= link_to t(:connect), new_session_path(resource_name), class: "devise-bottom-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(:creat_account), new_registration_path(resource_name), class: "devise-bottom-link" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:forgotten_password), new_password_path(resource_name), class: "devise-bottom-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Instructions de confirmation non reçues?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Instructions de déverouillage non reçues?", new_unlock_path(resource_name) %><br />
<% end -%>
