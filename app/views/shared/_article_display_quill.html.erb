<% article_typing_quill(article_name) %>
<% if user_signed_in? && current_user.admin && !display_only %>
  <form class="text-editor-form <%= additional_class ?  additional_class : ""%>" block-ref="<%= id%>">
    <input id="quill-name-<%=id%>" name="<%= @article.name %>" type="hidden">
    <input id= "quill-article-id-<%=id%>" article_id="<%= @article.id %>" type="hidden">
    <input id= "quill-user-id-<%=id%>" user_id="<%= current_user.id %>" type="hidden">
    <input id= "quill-locale-<%=id%>" locale="<%= I18n.locale %>" type="hidden">
    <div id="quill-editor-<%= id%>">
        <div id="toolbar-<%= id%>"></div>
        <%= (@article.content || "" ).html_safe %>
      </div>
    <button class="btn btn-primary" type="submit">Enregistrer le contenu</button>
  </form>
<% else %>
  <%= (@article.content || "" ).html_safe %>
<% end %>
