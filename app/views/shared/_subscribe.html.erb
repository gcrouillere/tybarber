<% unless session[:email]%>
<div class="subscribe-text">
  <h2><%=t(:stay_caught_up)%></h2>
  <p></p>
</div>
  <form action="/user-subscribe" method="post" authenticity_token="true" class="subscribe-form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="user[email]" id="email" placeholder="Adresse Email" class="subscribe-input">
    <input type="submit" class="subscribe-submit" value="<%=t(:subscribe)%>">
  </form>
<% end %>
