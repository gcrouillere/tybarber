      <% @avatarpictag = cl_image_tag @admin.avatarphoto.path, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de d'objets d'art en Morta" %>
      <% @avatarpicpath = cl_image_path @admin.avatarphoto, :width => 450, :height => 390, :crop => :thumb, :gravity => :face, alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de d'objets d'art en Morta" %>
    <% else %>
      <% @avatarpictag = cl_image_tag @admin.avatarphoto.path, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de d'objets d'art en Morta"%>
      <% @avatarpicpath = cl_image_path @admin.avatarphoto, alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de d'objets d'art en Morta"%>
    <% end %>
    <% @avatarpictagmobile = cl_image_tag(cl_image_path @admin.avatarphoto.path, :width => 200, :height => 200, :crop => :thumb, :gravity => :face, alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de d'objets d'art en Morta") %>
  <% end %>
  <% if  @admin.cityphoto.present? %>
    <% @citypictag = cl_image_tag @admin.cityphoto.path, class: "img-city", alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>
      <% @citypicpath = @admin.cityphoto.path %>
  <% end %>
<% end %>
