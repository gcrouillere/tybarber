<% @atelier1 = image_tag ENV['ATELIER1'], class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}" %>
<% @atelier2 = image_tag ENV['ATELIER2'], class: "img-city", alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>

<% if @admin %>
  <% if @admin.atelier1photo.present? %>
    <% if @admin.atelier1photo.width.to_f / (@admin.avatarphoto.height) > 1.2 %>
      <% @atelier1 = cl_image_tag @admin.atelier1photo.path, :width => 450, :height => 390, :crop => :thumb, :gravity => :face, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}" %>
    <% else %>
      <% @atelier1 = cl_image_tag @admin.atelier1photo.path, class: "img-avatar", alt: "#{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize} créateur de #{ENV['MODEL']}"%>
    <% end %>
  <% end %>
  <% if  @admin.atelier2photo.present? %>
    <% @atelier2 = cl_image_tag @admin.atelier2photo.path, class: "img-city", alt: "#{ENV['ADDRESS'].gsub(/[+]/, ' ')}, localisation de l'atelier de #{ENV['FIRSTNAME'].capitalize} #{ENV['LASTNAME'].capitalize}" %>
  <% end %>
<% end %>
