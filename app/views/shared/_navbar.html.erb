<!-- Right Navigation LAPTOP -->
<div class="navbar-laptop hidden-xs hidden-sm">
  <div class="main-nav">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand", title: "Retour à l'accueil de la boutique en ligne Ty Morta" do %>
      <%= render 'shared/logo_pic' %>
      <%= @logositepictag %>
    <% end %>

      <div class="navbar-item">
        <div class="nav-bar-list">

          <% if user_signed_in? %>
             <% if current_user.admin %>
              <%= link_to admin_root_path do %>
                <span>Administration</span>
              <% end %>
            <% end %>
          <% end %>

          <%= link_to ceramiques_path, title: "Liste des objets d'art en Morta en vente sur le site" do %>
            <span>Boutique</span>
          <% end %>

          <div class="dropdown">
            <a class="dropdown-toggle" type="button" data-toggle="dropdown">
              Infos
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Le Morta", morta_path, title: "Découvrez les origines de la formation du Morta" %></li>
              <li><%= link_to "La Brière", la_briere_path, title: "Présentation de la Brière, le territoire du Morta" %></li>
              <li><%= link_to "L'Atelier", atelier_path, title: "Présentation de l'atelier où Philippe Nerriere travaille le Morta" %></li>
              <li><%= link_to "Agenda", agenda_path, title: "Agenda des expositions et lieu de vente pour retrouver Ty Morta" %></li>
              <li><%= link_to "Presse", presse_path, title: "Articles de presse parus sur Ty Morta" %></li>
              <li><%= link_to "Sites partenaires", sites_partenaires_path, title: "Découvrez l'univers de Ty Morta avec ses sites partenaires" %></li>
              <li><%= link_to "Contact", contact_path, title: "Contactez Ty Morta, Philippe Nerriere vous répond personnellement."%></li>
            </ul>
          </div>

          <%= link_to new_lesson_path, title: "Visitez l'atelier de Philippe Nerriere pour découvrir la confection d'objets en Morta" do %>
            <span>Visiter l'atelier</span>
          <% end %>

          <% if session[:order].present? %>
            <% if Order.where(id: session[:order]).present? %>
              <% if Order.where(id: session[:order]).first.state != "lost" %>
                <%= link_to order_path(Order.find(session[:order])) do %>
                  <span><i class="fa fa-shopping-cart"></i></span>
                <% end %>
              <% end %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
    <% if params[:controller] == "ceramiques" %>
    <style>
      .main-nav {
        height: 60px !important;
      }
    </style>
      <div class="nav-categories">
        <%= link_to "AUTOUR DU VIN", ceramiques_path(categories: ["tire bouchon", "tire-bouchon"]), title: "Tire-bouchons et couteaux en Morta"  %>
        <hr>
        <%= link_to "SOIN", ceramiques_path(categories: ["rasoir", "blaireau", "bol"]), title: "Rasoirs, blaireaux, bols et pinceaux de maquillage en Morta" %>
        <hr>
        <%= link_to "DECORATION", ceramiques_path(categories: ["pendule", "horloge", "boite"]), title: "Lampes, pendules, horloges et boîtes en Morta" %>
      </div>
    <% end %>
  </div>

