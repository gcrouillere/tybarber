<% content_for(:description) do %>
  <%= t(:atelier_description) %>
<% end %>
<% content_for(:title_tag) do %>
  <%= t(:atelier_title) %>
<% end %>
<% content_for(:meta_image) do %>
  <%= image_path ENV['ATELIER1'] %>
<% end %>

<%= render 'shared/atelier_pics' %>

<div class="orange-div"></div>
<div class="orange-div-left"></div>
<div class="orange-div-right"></div>
<div class="orange-div-bottom"></div>

<div class="container">
  <div class="row">

  <!-- LAPTOP -->
    <div class="hidden-xs hidden-sm col-sm-12">
      <div class="wrapper-1">
        <%= photo_update('atelier1photo', 35, '', '', 15, '.avatarpic', "Mise à jour photo atelier 1")%>
        <%= @atelier1 %>
        <%= render 'shared/article_display_quill', article_name: "info", id: 0, display_only: false, additional_class: "" %>
      </div>

      <div class="wrapper-2">
        <%= render 'shared/article_display_quill', article_name: "info-bottom", id: 1, display_only: false, additional_class: "" %>
        <%= photo_update('atelier2photo', 15, 15, '', '', '.citypic', "Mise à jour photo atelier 2")%>
        <%= @atelier2 %>
      </div>
    </div>

  <!-- MOBILE -->
   <div class="col-xs-12 hidden-md hidden-lg mobile-info">
      <div class="wrapper-mobile">
        <div class="img-avatar-mobile"><%= @atelier1 %></div>
        <% article_display("info", "horizontal") %>
        <%= @markdown.html_safe %>
      </div>

      <div class="wrapper-mobile">
        <div class="img-avatar-mobile"> <%= @atelier2 %></div>
        <% article_display("info-bottom", "horizontal") %>
        <%= @markdown.html_safe %>
      </div>

    </div>

  </div>
</div>
