<% content_for(:description) do %>
  <%=t(:home_description)%>
<% end %>
<% content_for(:title_tag) do %>
  <%=t(:home_title)%>
<% end %>

<%= render 'shared/home_pics' %>

<div class="jumbotron">

<!-- LAPTOP -->
  <div class="hidden-xs">
    <div class="banner">
<!--       <div class="image-1">
        <style>
          .image-1 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div> -->
      <div class="image-2">
        <style>
          .image-2 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath2 %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div>
      <div class="image-3">
        <style>
          .image-3 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath3 %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div>
      <div class="banner-content">
        <div class="banner-text">
          <h1><%= t(:home_h1)%></h1>
          <p><%= t(:home_teaser)%></p>
        </div>
        <div class="home-links col-xs-12">
          <div class="link-i">
            <%= link_to t(:home_button_shave), ceramiques_path(univers: "soin"),title: t(:home_button_shave_link) %>
            <div class="line line1"></div>
          </div>
          <div class="link-i">
            <%= link_to t(:home_button_deco), ceramiques_path(univers: "decoration"), title: t(:home_button_deco_link) %>
            <div class="line line2"></div>
          </div>
          <div class="link-i">
            <%= link_to t(:home_button_table), ceramiques_path(univers: "table"), title: t(:home_button_table_link) %>
            <div class="line line3"></div>
          </div>
        </div>
      </div>
        <%= photo_update('productphoto', 30, '', '', 30, '.homepic', "Mise à jour photo arbre")%>
        <%= photo_update('product2photo', 30, '', '', 385, '.homepic2', "Mise à jour photo marais")%>
        <%= photo_update('product3photo', 30, '', '', 730, '.homepic3', "Mise à jour photo bois")%>
        <%= photo_update('logophoto', 260, '', '', 30, '.logopic', "Mise à jour logo")%>
        <%= image_tag "madeinfrance.png", class: "madeinfrance" %>
    </div>
  </div>

<!-- MOBILE -->
  <div class="hidden-sm hidden-md hidden-lg">
    <div class="banner-xs">
      <div class="image-1">
        <style>
          .image-1 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div>
      <div class="right-images">
      <div class="image-2">
        <style>
          .image-2 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath2 %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div>
      <div class="black-div"></div>
      <div class="image-3">
        <style>
          .image-3 {
            background-image: linear-gradient(135deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.3) 50%), url(<%= @homepicpath3 %>);
            background-size: cover;
            background-position-y: center;
            background-position-x: center;
          }
        </style>
      </div>
      </div>
      <div class="banner-content-xs">
        <h1><%= t(:home_h1)%></h1>
        <p><%= t(:home_teaser)%></p>
        <%= link_to t(:home_button_mobile), ceramiques_path, class: "btn btn-primary btn-home" %>
      </div>
    </div>
  </div>

</div>

<div class="container">
  <div class="home-info-bloc row">
    <div class="home-info-text col-xs-12 col-sm-5 col-lg-4">
      <%= render 'shared/article_display_quill', article_name: "accueil", id: 0, display_only: false, additional_class: "" %>
    </div>
    <div class="home-info-images col-xs-12 col-sm-7 col-lg-8">
      <div class="inner-photos">
        <%= cl_image_tag @homepicpath, class: "arbre", alt: "Chêne avant sa transformation en Morta"%>
        <%= cl_image_tag @homepicpath2, class: "marais", alt: "Marais de Brière"%>
        <%= cl_image_tag @homepicpath3, class: "bois", alt: "Morta en cours de fossilisation"%>
      </div>
    </div>
  </div>
</div>

<div class="home-products-bloc">
  <h2><%= t(:home_h2)%></h2>

    <div class="univers-cards row">
      <div class="soin col-xs-12 col-sm-4">
        <%= link_to ceramiques_path(univers: "soin"), title: t(:shaving_link) do %>
          <div class="card-image card-image1">
            <style>
              .card-image1 {
                background-image: url(<%= image_path("rasoir.jpg") %>);
                background-size: cover;
                background-position-y: center;
                background-position-x: center;
              }
            </style>
            <p><%=t(:home_discover)%></p>
          </div>
        <% end %>
        <div class="home-cards-text home-text-left">
          <h3></h3>
          <p><%=t(:home_shave_block)%></p>
        </div>
      </div>
      <div class="decoration col-xs-12 col-sm-4">
        <%= link_to ceramiques_path(univers: "decoration"), class: "decoration-link", title: t(:decoration_link) do %>
            <style>
              .decoration {
                background-image: url(<%= image_path("deco.jpg") %>);
                background-size: cover;
                background-position-y: center;
                background-position-x: center;
              }
            </style>
            <div class="home-text-center">
              <h3><%=t(:home_button_deco)%></h3>
              <p><%=t(:home_deco_block)%></p>
            </div>
        <% end %>
      </div>
      <div class="vin col-xs-12 col-sm-4">
        <div class="home-cards-text home-text-right">
          <h3><%=t(:home_button_table)%></h3>
          <p><%=t(:home_table_block)%></p>
        </div>
        <%= link_to ceramiques_path(univers: "table"), title: t(:table_link) do %>
          <div class="card-image card-image3">
            <style>
              .card-image3 {
                background-image: url(<%= image_path("tirebouchon.jpg") %>);
                background-size: cover;
                background-position-y: center;
                background-position-x: center;
              }
            </style>
            <p><%=t(:home_discover)%></p>
          </div>
        <% end %>
      </div>
    </div>

</div>

<%= render 'shared/schema_org_jsons/home_page_json' %>
